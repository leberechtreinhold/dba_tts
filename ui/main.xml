<Panel id="panel_dba_orders_bg" width="230" height="400" rectAlignment="MiddleRight" color="#00000000" >
    <Image image="rightside_menu_bg"></Image>
</Panel>
<Panel id="panel_dba_orders" width="230" height="400" color="#00000000" rectAlignment="MiddleRight" padding="20 0 20 20">
    <VerticalLayout>
        <Slider id="slider_paces" minValue="0" maxValue="500" wholeNumbers="true" value="200" colors="#00000000|#00000000|#00000000|#00000000" backgroundcolor="#FFFFFFF" onValueChanged="slider_paces_changed"></Slider>
        <Button id="button_move_forward" onClick="move_bases">Move 200 paces</Button>
        <Button id="button_wheel" onClick="on_wheel">Wheel Group</Button>
        <Button id="button_push_back" onClick="on_push_back">Push back Column</Button>
        <Button id="button_spawn_table" onClick="on_create_table_menu">Spawn table</Button>
        <Button id="button_create_army" onClick="create_army_options_menu">Deploy an army</Button>
        <Toggle id="toggle_zoc" isOn="false" onValueChanged="on_toggle_zoc">Do not show ZOC</Toggle>
        <Toggle id="toggle_deployment_lines" isOn="false" onValueChanged="on_toggle_deployment_lines">Do not show rulers</Toggle>
        <Toggle id="toggle_snapping" isOn="true" onValueChanged="on_toggle_snapping">Snap bases</Toggle>
    </VerticalLayout>
</Panel>

<!-- TODO Prettify -->
<Panel id="panel_current_movement" color="#dddddd" width="400" height="70" rectAlignment="LowerCenter" offsetXY="0 200" active="false">
    <Text id="text_current_movement_paces" fontSize="24">Current movement: 0 paces</Text>
</Panel>

<Panel id="panel_dba_pip" width="400" height="150" color="#00000000" outline="#00000000" outlineSize="2" rectAlignment="LowerCenter">
    <Image image="pip_counter_bg"></Image>
</Panel>
<Panel id="panel_dba_pip_btns" width="400" height="150" color="#00000000" outline="#00000000" rectAlignment="LowerCenter">
    <HorizontalLayout>
        <Text id="text_pips_player_blue" ignoreLayout="true" fontSize="64" position="-135 20" color="#2e82ec">0</Text>
        <Text id="text_pips_player_red" ignoreLayout="true" fontSize="64" position="140 20" color="#ec482e">0</Text>

        <!-- TODO The hightlighted thing is not working, investigate... -->
        <Button icon="plus" highlightedSprite="minus" pressedSprite="minus" transition="SpriteSwap" iconWidth="31" color="#00000000" iconColor="#00000000" ignoreLayout="true" position="30 -30" interactable="true" onClick="add_pip(blue)"></Button>
        <Button icon="minus" iconWidth="31" color="#00000000" ignoreLayout="true" position="60 -30" onClick="remove_pip(blue)"></Button>
        <Button icon="plus" iconWidth="31" color="#00000000" ignoreLayout="true" position="305 -30" onClick="add_pip(red)"></Button>
        <Button icon="minus" iconWidth="31" color="#00000000" ignoreLayout="true" position="335 -30" onClick="remove_pip(red)"></Button>
    </HorizontalLayout>
</Panel>

<Panel id="panel_dba_table_selection_bg" width="600" height="500" rectAlignment="MiddleCenter" color="#00000000" active="false">
    <Image image="select_table_bg"></Image>
</Panel>
<Panel id="panel_dba_table_selection" width="600" height="500" rectAlignment="MiddleCenter" active="false">
    <TableLayout padding="100 100 80 80" cellSpacing="20">
        <Row preferredHeight="40">
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <Text fontSize="20">Select the background for the table:</Text>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <ToggleGroup id="togglegroup_table_type" onValueChanged="on_toggle_table_type">
                    <TableLayout>
                        <Row>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Arable, Grass</Toggle>
                            </Cell>

                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Forest</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Tropical, Jungle</Toggle>
                            </Cell>
                        </Row>
                        <Row>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Hilly, Mountains</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Dry, Desert</Toggle>
                            </Cell>
                            <Cell dontUseTableCellBackground="true">
                                <Toggle fontSize="16">Steppe</Toggle>
                            </Cell>
                        </Row>
                    </TableLayout>
                </ToggleGroup>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button columnSpan="2" fontSize="20" onClick="on_cancel_load_table">Cancel</Button>
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <!-- Filler -->
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button fontSize="20" onClick="on_load_table">Load</Button>
            </Cell>
        </Row>
    </TableLayout>
</Panel>

<Panel id="panel_dba_troop_selection_bg" width="600" height="500" rectAlignment="MiddleCenter" active="false">
    <Image image="select_army_bg"></Image>
</Panel>
<Panel id="panel_dba_troop_selection" width="600" height="500" rectAlignment="MiddleCenter" color="#00000000" active="false">
    <TableLayout padding="60" cellSpacing="20">
        <Row preferredHeight="40">
            <Cell columnSpan="1" dontUseTableCellBackground="true">
                <Text fontSize="20">Book:</Text>
            </Cell>
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_book" onValueChanged="on_book_selected" fontSize="20">
                    <Option selected="true">Book I</Option>
                    <Option>Book II</Option>
                    <Option>Book III</Option>
                    <Option>Book IV</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="1" dontUseTableCellBackground="true">
                <Text fontSize="20">Army:</Text>
            </Cell>
            <Cell columnSpan="5" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_army" onValueChanged="on_army_selected" fontSize="20">
                    <Option selected="true">Army 1</Option>
                    <Option>Army 2</Option>
                    <Option>Army 3</Option>
                    <Option>Army 4</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="1" dontUseTableCellBackground="true">
                <Text fontSize="20">Player:</Text>
            </Cell>
            <Cell columnSpan="5" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_color" onValueChanged="on_color_selected" fontSize="20">
                    <Option selected="true">Red</Option>
                    <Option>Blue</Option>
                </Dropdown>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <VerticalScrollView color="#00000000" verticalScrollbarVisibility="AutoHide">
                    <Text id="text_authors" alignment="UpperLeft" fontSize="18" contentSizeFitter="vertical">
                      The authors of the models are:
                      - Empire Swordsmen by Veer
                      - Whatever by Example
                      - Base 3
                      - Base 4
                      - Base 5
                      - Base 6
                      - Base 7
                      - Base 8
                      - Base 9
                      - Base 10
                      - Base 11
                      - Base 12
                  </Text>
                </VerticalScrollView>
            </Cell>
        </Row>
        <Row preferredHeight="40">
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button columnSpan="2" fontSize="20" onClick="on_cancel_load_army">Cancel</Button>
            </Cell>
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <!-- Filler -->
            </Cell>
            <Cell columnSpan="1" dontUseTableCellBackground="true">
                <Button columnSpan="1" fontSize="20" onClick="on_load_army">Load</Button>
            </Cell>
        </Row>
    </TableLayout>
</Panel>

<Panel id="panel_wheel" color="#dddddd" width="450" height="250" rectAlignment="LowerCenter" active="false">
    <TableLayout padding="30 30 20 20" cellSpacing="20">
        <Row>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Text fontSize="16">Orientation:</Text>
            </Cell>
            <Cell columnSpan="4" dontUseTableCellBackground="true">
                <ToggleGroup id="togglegroup_orientation" 
                    onValueChanged="on_change_orientation_wheel">
                    <HorizontalLayout>
                        <Toggle>Left</Toggle>
                        <Toggle>Right</Toggle>
                    </HorizontalLayout>
                </ToggleGroup>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Text fontSize="16">Degrees:</Text>
            </Cell>
            <Cell columnSpan="4" dontUseTableCellBackground="true">
                <Slider id="slider_wheel_rotation" minValue="0" maxValue="30" wholeNumbers="true" value="0" colors="#00000000|#00000000|#00000000|#00000000" backgroundcolor="#FFFFFFF" onValueChanged="on_rotation_wheel"></Slider>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="6" dontUseTableCellBackground="true">
                <Text fontSize="16">This will cost 0 paces</Text>
            </Cell>
        </Row>
        <Row>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button columnSpan="2" fontSize="20" onClick="on_cancel_wheeling">Cancel</Button>
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <!-- Filler -->
            </Cell>
            <Cell columnSpan="2" dontUseTableCellBackground="true">
                <Button columnSpan="1" fontSize="20" onClick="on_make_wheeling">Move</Button>
            </Cell>
        </Row>
        </TableLayout>
</Panel>
