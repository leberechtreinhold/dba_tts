<!-- TODO Add more buttons and prettify -->
<Panel id="panel_dba_orders" width="200" height="400" color="#FFFFFF" outline="#000" outlineSize="2" rectAlignment="MiddleRight" >
<VerticalLayout>
    <Slider id="slider_paces" minValue="0" maxValue="500" wholeNumbers="true" value="200" colors="#00000000|#00000000|#00000000|#00000000" backgroundcolor="#FFFFFFF" onValueChanged="slider_paces_changed"></Slider>
    <Button id="button_move_forward" onClick="move_bases">Move 200 paces</Button>
    <Button onClick="align_bases">Align bases</Button>
    <Button id="button_create_army" onClick="create_army_options_menu">Deploy an army</Button>
    <Button onClick="debug_button">DEBUG BUTTON</Button>
</VerticalLayout>
</Panel>


<!-- TODO Prettify -->
<Panel id="panel_current_movement" color="#dddddd" width="400" height="70" rectAlignment="LowerCenter" offsetXY="0 200">
    <Text id="text_current_movement_paces" fontSize="24">Current movement: 0 paces</Text>
</Panel>

<Panel id="panel_dba_pip"  width="400" height="150" color="#00000000" outline="#00000000" outlineSize="2" rectAlignment="LowerCenter" >
        <Image image="pip_counter_bg"></Image>
</Panel>

<Panel id="panel_dba_pip_btns" width="400" height="150" color="#00000000" outline="#00000000" rectAlignment="LowerCenter" >
    <HorizontalLayout>
        <Text id="text_pips_player_blue" ignoreLayout="true" fontSize="64" position="-135 20" color="#2e82ec">0</Text>
        <Text id="text_pips_player_red" ignoreLayout="true" fontSize="64" position="140 20" color="#ec482e">0</Text>

        <!-- TODO The hightlighted thing is not working, investigate... -->
        <Button icon="plus" highlightedSprite="minus" pressedSprite="minus" transition="SpriteSwap"
                iconWidth="31" color="#00000000" iconColor="#00000000" ignoreLayout="true" position="30 -30" interactable="true"
                onClick="add_pip(blue)"></Button>
        <Button icon="minus" iconWidth="31" color="#00000000" ignoreLayout="true" position="60 -30"
                onClick="remove_pip(blue)"></Button>
        <Button icon="plus" iconWidth="31" color="#00000000" ignoreLayout="true" position="305 -30"
                onClick="add_pip(red)"></Button>
        <Button icon="minus" iconWidth="31" color="#00000000" ignoreLayout="true" position="335 -30"
                onClick="remove_pip(red)"></Button>
    </HorizontalLayout>
</Panel>

<Panel id="panel_dba_troop_selection_bg" width="600" height="500" rectAlignment="MiddleCenter" active="false">
        <Image image="select_army_bg"></Image>
</Panel>

<Panel id="panel_dba_troop_selection" width="600" height="500" rectAlignment="MiddleCenter" color="#00000000" active="false">
    <TableLayout padding="60" cellSpacing="20">
        <Row preferredHeight="40">
            <Cell columnSpan="1" dontUseTableCellBackground="true">
                <Text fontSize="20">Book:</Text>
            </Cell>
            <Cell columnSpan="3" dontUseTableCellBackground="true">
                <Dropdown id="dropdown_book" onValueChanged="on_book_selected" fontSize="20" >
                   <Option selected="true">Book I</Option>
                   <Option>Book II</Option>
                   <Option>Book III</Option>
                   <Option>Book IV</Option>
                </Dropdown>
            </Cell>
       </Row>
       <Row preferredHeight="40">
           <Cell columnSpan="1" dontUseTableCellBackground="true">
               <Text fontSize="20">Army:</Text>
           </Cell>
           <Cell columnSpan="5" dontUseTableCellBackground="true">
               <Dropdown id="dropdown_army" onValueChanged="on_army_selected" fontSize="20">
                  <Option selected="true">Army 1</Option>
                  <Option>Army 2</Option>
                  <Option>Army 3</Option>
                  <Option>Army 4</Option>
               </Dropdown>
           </Cell>
      </Row>
     <Row preferredHeight="40">
         <Cell columnSpan="1" dontUseTableCellBackground="true">
             <Text fontSize="20">Player:</Text>
         </Cell>
         <Cell columnSpan="5" dontUseTableCellBackground="true">
             <Dropdown id="dropdown_color" onValueChanged="on_color_selected" fontSize="20">
                <Option selected="true">Red</Option>
                <Option>Blue</Option>
             </Dropdown>
         </Cell>
    </Row>
      <Row>
          <Cell columnSpan="6" dontUseTableCellBackground="true">
              <VerticalScrollView color="#00000000" verticalScrollbarVisibility="AutoHide">
                  <Text id="text_authors" alignment="UpperLeft" fontSize="18" contentSizeFitter="vertical">
                      The authors of the models are:
                      - Empire Swordsmen by Veer
                      - Whatever by Example
                      - Base 3
                      - Base 4
                      - Base 5
                      - Base 6
                      - Base 7
                      - Base 8
                      - Base 9
                      - Base 10
                      - Base 11
                      - Base 12
                  </Text>
              </VerticalScrollView>
          </Cell>
      </Row>
      <Row preferredHeight="40">
          <Cell columnSpan="2" dontUseTableCellBackground="true">
              <Button columnSpan="2" fontSize="20" onClick="on_cancel_load_army">Cancel</Button>
          </Cell>
          <Cell columnSpan="3" dontUseTableCellBackground="true">
              <!-- Filler -->
          </Cell>
          <Cell columnSpan="1" dontUseTableCellBackground="true">
              <Button columnSpan="1" fontSize="20" onClick="on_load_army">Load</Button>
          </Cell>
      </Row>
   </TableLayout>
</Panel>
